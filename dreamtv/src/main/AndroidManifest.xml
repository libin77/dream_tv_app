<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dreamtv.app">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.dreamtv.app.utils.MyAppClass"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <activity
            android:name="com.dreamtv.app.TermsActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Nobar" />
        <activity
            android:name="com.dreamtv.app.ReplyActivity"
            android:screenOrientation="fullSensor"
            android:label="@string/title_activity_reply"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dreamtv.app.NoItemActivity"
            android:theme="@style/AppTheme.Nobar" />
        <activity
            android:name="com.dreamtv.app.ProfileActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Nobar" />
        <activity
            android:name="com.dreamtv.app.PassResetActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Nobar" />
        <activity
            android:name="com.dreamtv.app.SearchActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Nobar" />
        <activity
            android:name="com.dreamtv.app.SignUpActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Nobar" />
        <activity
            android:name="com.dreamtv.app.LoginActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Nobar" />
        <activity
            android:name="com.dreamtv.app.DetailsActivity"
            android:screenOrientation="fullSensor"
            android:configChanges="screenLayout|screenSize|orientation"
            android:label="@string/title_activity_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--android:configChanges="screenLayout|screenSize|orientation"-->

        <activity
            android:name="com.dreamtv.app.MainActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Nobar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.dreamtv.app.SettingsActivity"
            android:theme="@style/AppTheme.Nobar" />
        <activity
            android:name="com.dreamtv.app.PlayerActivity"
            android:configChanges="screenLayout|screenSize|orientation"
            android:label="@string/title_activity_player"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dreamtv.app.SplashscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:screenOrientation="fullSensor"
            android:theme="@style/FullscreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dreamtv.app.ItemMovieActivity"
            android:label="@string/title_activity_item_show"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.dreamtv.app.ItemTVActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Nobar" />
        <activity
            android:name="com.dreamtv.app.ItemSeriesActivity"
            android:screenOrientation="fullSensor"
            android:theme="@style/AppTheme.Nobar" />
    </application>

</manifest>